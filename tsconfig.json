{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"declaration": false,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"baseUrl": "./",
		"typeRoots": [
			"node_modules/@types",
			"node_modules/gsap/types/index.d.ts",
			"./src/types",
			"./types",
			"./typings",
			"./* "
		],
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["chrome", "jest", "node", "react", "react-dom"],
		"resolveJsonModule": true
	},
	"include": [
		"./src",
		"./src/**/*.ts",
		"./src/**/*.d.ts",
		"./src/**/*.tsx",
		"./src/**/*.vue",
		"./tests/**/*.ts",
		"./tests/**/*.tsx",
		"./tests/**/*.vue",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"tests/**/*.vue",
		"src/**/*",
		"types/**/*",
		"vue-extended.d.ts",
		"typings/**/*",
		"typings/*",
		"typings",
		"declarations.d.ts",
		"i18n.ts",
		"* / * / * .d.ts"
	],
	"files": ["./vue-shims.d.ts", "./i18n.ts"],
	"exclude": ["node_modules"]
}
